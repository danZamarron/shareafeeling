<form class="text-center border border-light p-5" action="/feelings/add" method="POST" enctype="multipart/form-data">

    <p class="h4 mb-4">Agregar Feeling</p>

    <div class="form-row mb-4">
        <div class="col">
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" name="title" placeholder="Titulo del Feeling...">
        </div>
    </div>

    <input type="text" id="defaultRegisterFormEmail" class="form-control mb-4" name="feeling"  placeholder="Que te hace sentir el Feeling">

    <div class="form-group">
        <small for="feelingPicture">Imagen del Feeling</small><br>
        <input type="file" name="feelingPicture" id="feelingPicture"/>  
    </div>

    <button class="btn btn-info my-4 btn-block" type="submit">Agregar</button>

    {{#if errorMessage}}
      <p class="error h4 mb-4" style="color: red;">{{errorMessage}}</p>
    {{/if}}

    <hr>

    <p><a href="/" >Regresar a Home</a>

</form>